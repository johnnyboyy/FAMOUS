<div class="row">

	<div class="three columns">
		<div>
			<h3><%= @band.name %></h3>
		</div>
	</div>

	<div class="seven columns">

		<section class="tabs">

			<ul class="tab-nav">
				<li class="tab active">
					<a href="#">Songs</a>
				</li>
			  <li class="tab">
			  	<a href="#">Band Members</a>
			  </li>
				<div class="tab-content active">
		        <%= render 'songs/displaySongs' %>
		    </div>
		    <div class="tab-content">
		    	<div class="band_members">
						<ul>
							<% @members.each do |m| %>
								<li>
									<%= m.first_name %>
								</li>
							<% end %>
						</ul>
					</div>	
				</div>
			</ul>

		</section>


	</div>

	<% if user_signed_in? %>
		<div class="two column">
			<ul>
				<% if @band.users.include?(current_user) %>

					<li><%= link_to "New Song", new_band_song_path(params[:id]) %></li>
					<li><%= link_to 'Leave ' + @band.name, leave_band_path, method: :post %></li>
					<li><div class="small info btn icon-left entypo icon-cancel-circled member_options_toggle"><a href="#">Edit</a></div></li>

				<% else %>
					<li><%= link_to 'Join ' + @band.name, join_band_path, method: :post %></li>
				<% end %>
			</ul>
		</div>
	<% end %>


</div>





