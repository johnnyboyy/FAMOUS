<div class="row">

	<div class="three columns">
		<div>
			<%= image_tag(@band.profile_pic.url, class: "profile_pic") %>
			<h3><%= @band.name %></h3>
		</div>
	</div>

	<div class="nine columns">

		<section class="tabs">

			<ul class="tab-nav">
				<li class="tab active">
					<a href="#">Songs</a>
				</li>
			  <li class="tab">
			  	<a href="#">Band Members</a>
			  </li>
		  <% if user_signed_in? && @band.users.include?(current_user) %>
			  <li class="tab">
			  <a href='#'>Member Requests </a>
			  </li>
		  <% end %>
			</ul>
			<div class="tab-content active">
	        <%= render 'songs/displaySongs' %>
	    </div>
	    <div class="tab-content">
	    	<%= render 'bands/bandMembersTab', members: @members %> 
			</div>
		<% if user_signed_in? && @band.users.include?(current_user) %>
			<div class="tab-content">
				<%= render 'requests/bandMemberRequestsTab', band_requests: @band_requests %>
			</div>
		<% end %>
		</section>
	</div>
</div>





