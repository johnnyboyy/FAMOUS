

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

   <div class="row">
      <fieldset class="push_two six columns">
        <legend><h2>Sign Up</h2></legend>
        <ul>
            <ul>
              <li class="field">
              	<%= f.label :email %>
  							<%= f.email_field :email, :autofocus => true, class: "xxwide input" %>
              </li>
              <li class="field">
                <%=f.label :first_name %>
                <%=f.text_field :first_name, class: "xwide input" %>
              </li>
              <li class="field">
                <%=f.label :last_name %>
                <%=f.text_field :last_name, class: "xwide input" %>
              </li>
              <% if f.object.password_required? %>  
                <li class="field">
  	              <%= f.label :password %>
  	 							<%= f.password_field :password, class: "xwide input" %>
                </li>
                <li class="field">
                  <%= f.label :password_confirmation %>
                  <%= f.password_field :password_confirmation, class: "xwide input" %>
                </li>
              <% end %>
              <li class="medium secondary btn">
                <%= f.submit 'Sign Up!' %>
              </li>
            </ul>
            <li> 
							<%= render "devise/shared/links" %>
						</li>
        </ul>
      </fieldset>
  </div>


<% end %>




