
<div class="row" id="list_row">
	<div class="twelve columns">
		<% @songs.each do |s| %>

			<div id="content_holder">

				<div class="track_info">
					<h4 class="title"><%= s.title %></h4>					
					<h5 class="artist">By: <%= link_to s.artist, s.band %></h5>
				</div>

					<span class="likes">
					<% if user_signed_in? %>
						<% if current_user.songs.include?(s) %>
							<span class="pretty small primary btn"><%= link_to 'unlike', unlike_song_path(s.id), method: :post %></span>
						<% else %>
							<span class="pretty small primary btn" ><%= link_to 'like', like_song_path(s.id), method: :post %></span>
						<% end %>
					<% end %>
					Fame: <%= s.fame %>
				</span>

				<audio class="song_player" src="<%=s.mp3_file.url%>" controls>
					<p>If you are reading this, it is because your browser does not support the audio element.</p>
				</audio>
			</div>
		<% end %>
	</div>
</div>
