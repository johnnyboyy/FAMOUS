<% content_for :giant_image do %>
	<div class="large-height parallax hide-on-mobile" gumby-parallax="0.6" id="image"></div>
<% end %>

<div class="row">
	<div class="three columns">
		<span class="field">
	  	<input class="search input" type="text" name="search" placeholder="Search" />
	  <span>
		<h2> #Trending </h2>
		<h3> Today </h4><br>
		<% if Song.any? %>
			<h4> <%= link_to @topsong.title, band_path(@topsong.band) %> </h4>
		<% end %>
		<h3> This Week </h3><br>
		<% if Song.any? %>

			<h4> <%= link_to @topsongoftheweek.title, band_path(@topsongoftheweek.band) %> </h4>
		<% end %>
	</div>

	<div class="nine columns">

		<section class="tabs">

			<ul class="tab-nav">
				<li class="tab active">
					<a href="#">Songs</a>
				</li>
			  <li>
			  	<a href="#" class="tab">Bands</a>
			  </li>
					<div class="tab-content active" id="songs" >
		      	<%= render 'songs/displaySongs' %>
						<%= paginate @songs %>
			    </div>
			  	<div class="tab-content">
			        <%= render 'bands/bandtab' %>
			        <%= paginate @bands %>
			    </div>
			</ul>

		</section>
	</div>

</div>
