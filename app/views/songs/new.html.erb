
<%= form_for([@band, @band.songs.create]) do |f| %>
 
  <% if @song.errors.any? %>
    <div id="error_explanation">
      <h4><%= pluralize(@song.errors.count, "error") %> prohibited this product from being saved:</h4>

      <ul>
      <% @song.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="six columns centered">
      <fieldset>
        <legend><h2>New Song</h2></legend>
          <ul>
            <li>
              <%= f.label :mp3_file, "Song file" %>
              <%= f.file_field :mp3_file %>
            </li><br />
            <li class="field">
              <%= f.label :title %>
              <%= f.text_field :title, class: "input" %>
            </li>
            <li class="field">
              <%=f.label :genres_list %>
              <%=f.text_field :genres_list, class: "input" %>
            </li>
            <li class="medium secondary btn">
              <%= f.submit 'Create Song' %>
            </li>
          </ul>
      </fieldset>
    </div>
  </div>


<% end %>
