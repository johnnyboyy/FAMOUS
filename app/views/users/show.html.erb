<h2><%= @user.email %></h2>

<div class="row" id="list_row">
	<div class="twelve columns">
		<% @user.songs.each do |s| %>
			<div id="content_holder">


				<div class="track_info">
					<h4 class="title"><%= s.title %></h4>					
					<h5 class="artist">By: <%= s.artist %></h5>
				</div>





			


				<audio class="song_player" src="<%=s.mp3_file.url%>" controls>
					<p>If you are reading this, it is because your browser does not support the audio element.</p>
				</audio>

				<span class="likes">
					<% if user_signed_in? %>
						<% if current_user.songs.include?(s) %>
							<div class="pretty small prmary btn"><%= link_to 'unlike', unlike_song_path(s.id), method: :post %></div>
						<% else %>
							<div class="pretty small primary btn" ><%= link_to 'like', like_song_path(s.id), method: :post %></div>
						<% end %>
					<% end %>
					Likes: <%= s.likes.count %>
				</span>


			</div>
		<% end %>
	</div>
</div>

<%= link_to "Make a Band", new_band_path %>
