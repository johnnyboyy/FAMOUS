<% content_for :javascript_includes do %>
  <%= javascript_include_tag "users.js" %>
<% end %>

<div class="row">

	<div class="three columns">
		<%= image_tag(@user.profile_pic.url, class: "profile_pic") %>
		<h3> <%= @user.first_name %> </h3>
	</div>

	<div class=" seven columns">
		<div class="tab_container">
			<section class="tabs">

				<ul class="tab-nav">
				
					<li class="tab active">
						<a href="#" class="tab">Liked Songs</a>
					</li>
					<li class="tab">
				  	<a href="#" class="tab">Liked Bands</a>
				  </li>

					<div class="tab-content active">
			        <%= render 'songs/displaySongs' %>
			    </div>
			  	<div class="tab-content">
			  		<%= render 'bands/bandtab' %>
			    </div>

				</ul>

			</section>
		</div>
	</div>
	<fieldset class="two columns">
		<div class="pull_right">
	    <legend><h4>Options</h4></legend>
	    <ul>
				<li>
				 	<%= link_to "Make a Band", new_band_path %>
				</li>
				<li>
					<%= link_to "Edit account", edit_user_registration_path %>
				</li>
			</ul>
		</div>
	</fieldset>
</div>

